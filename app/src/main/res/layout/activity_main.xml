<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTaskOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:padding="@dimen/_5dp"
        android:text="@string/btn_task_one"
        android:textAllCaps="false"
        android:textSize="@dimen/_16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTaskTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:padding="@dimen/_5dp"
        android:text="@string/btn_task_two"
        android:textAllCaps="false"
        android:textSize="@dimen/_16sp"
        android:layout_marginTop="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@id/btnTaskOne"
        app:layout_constraintStart_toStartOf="@id/btnTaskOne"
        app:layout_constraintEnd_toEndOf="@id/btnTaskOne"/>

</androidx.constraintlayout.widget.ConstraintLayout>